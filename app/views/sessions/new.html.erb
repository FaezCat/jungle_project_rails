<h1>User Login</h1>
<br>

<%= form_tag '/login' do %>

  <div class="input-group">
  <span class="input-group-addon" id="basic-addon1">
  Email: 
  </span>
  <%= text_field_tag :email %>
  </div>

  <br>

  <div class="input-group">
  <span class="input-group-addon" id="basic-addon1">
  Password: 
  </span>
  <%= password_field_tag :password %>
  </div>
  <br>
  <br>
  <%= submit_tag "Submit" %>

<% end %>